<div class="card-group"> 
  {{#each artists}}
    <div class="flex flex-wrap">
      <img class="card-img-top img-size" src="{{this.images.0.url}}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{this.name}} </h5>
        <a class = " btn btn-success" href="/albums/{{this.id}}">View Albums</a>
      </div>
    </div>
  {{/each}}
</div>